{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES6",
    "outDir": "./src/js",
    "rootDir": "./src/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules"]
}